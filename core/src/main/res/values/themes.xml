<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAlmanac" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_1</item>
        <item name="colorPrimaryVariant">@color/green_2</item>
        <item name="colorPrimaryVariant2">#F9FBFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backColor">#F2F5FA</item>

        <item name="textColorPrimary">#24292E</item>
        <item name="textColorSecondary">#5F676F</item>

        <item name="outlineColor">@color/gray_500</item>
        <item name="formColor">@color/gray_200</item>
    </style>

    <style name="Theme.RickAlmanac.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RickAlmanac.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RickAlmanac.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.RickAlmanac.WrappedView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.RickAlmanac.Header_1" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Theme.RickAlmanac.Header_2" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.RickAlmanac.Header_3" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.RickAlmanac.Paragraph_1" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.RickAlmanac.Paragraph_2" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.RickAlmanac.SmallText" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.RickAlmanac.Button" parent="Theme.RickAlmanac.WrappedView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>
</resources>